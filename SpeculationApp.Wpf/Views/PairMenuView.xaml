<UserControl x:Class="SpeculationApp.Wpf.Views.PairMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpeculationApp.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button Content="Go to Main Menu" Width="100" Height="21"  
                    HorizontalAlignment="Left" Command="{Binding NavigateToMainMenuCommand}"/>

            <Separator />

            <Button Content="Add Convertation" Width="120" Height="21"
                        Command="{Binding AddConvertationCommand}"/>

            <Button Content="Remove Convertation" Width="120" Height="21"
                        Command="{Binding RemoveConvertationCommand}"/>

        </ToolBar>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
            <TextBlock Text="{Binding Pair.BaseCurrency.Code}" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="/" FontSize="16"/>
            <TextBlock Text="{Binding Pair.TradeCurrency.Code}" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="2" Margin="10">
            <DataGrid ItemsSource="{Binding Pair.Convertations}" SelectedItem="{Binding SelectedConvertation}" 
                      AutoGenerateColumns="False">
                
                <DataGrid.Resources>
                    <DataTemplate x:Key="DateTemplate">
                        <TextBlock Text="{Binding Path=Date, Mode=OneWay, StringFormat=dd.MM.yyyy}" />
                    </DataTemplate>
                    <DataTemplate x:Key="EditingDateTemplate">
                        <DatePicker SelectedDate="{Binding Path=Date, UpdateSourceTrigger=LostFocus}" />
                    </DataTemplate>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Base Currency Amount" Width="150" Binding="{Binding Path=BaseCurrencyAmount, UpdateSourceTrigger=LostFocus}" />
                    <DataGridCheckBoxColumn Header="To Trade Currency" Width="150" Binding="{Binding Path=ToTradeCurrency, UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTextColumn Header="Trade Currency Amount" Width="150" Binding="{Binding Path=TradeCurrencyAmount, UpdateSourceTrigger=LostFocus}" />

                    <DataGridTemplateColumn Header="Date" Width="150" CellTemplate="{StaticResource DateTemplate}" CellEditingTemplate="{StaticResource EditingDateTemplate}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</UserControl>
